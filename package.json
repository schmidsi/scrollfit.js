    "type": "git",
    "url": "git@github.com:schmidsi/scrollfit.js.git"
  },
  "keywords": [
    "html",
    "js",
    "vanilla-js",
    "textfit",
    "fittext",
    "fontsize"
  ],
  "author": "Simon Schmid <simon@schmid.io> (http://www.schmid.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/schmidsi/scrollfit.js/issues"
  },
  "dependencies": {
    "amp-defaults": "^1.0.1",
    "requestanimationframe": "0.0.22"
  },
  "main": "./src/index.coffee",
  "browserify": {
    "transform": [
      "coffeeify",
      "debowerify"
    ]
  },
  "devDependencies": {
